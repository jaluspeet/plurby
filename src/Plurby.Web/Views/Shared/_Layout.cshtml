@using Microsoft.Extensions.Options
@using Plurby.Web.Areas
@using Plurby.Web.Infrastructure
@using System.Reflection
@inject IHtmlLocalizer<SharedResource> SharedLocalizer
@inject IOptions<AppSettings> appSettings
@{
    Layout = "_LayoutHtml";
    var version = Assembly.GetAssembly(typeof(Startup)).GetName().Version;

    var identitaCorrente = (IdentitaViewModel)ViewData[IdentitaViewModel.VIEWDATA_IDENTITACORRENTE_KEY];
}

@section metas{
    @RenderSection("metas", false)
}

@section styles{
    @RenderSection("styles", false)

    <!-- CSS per layout e personalizzazioni -->
    <style>
        /* Impostazioni per sticky footer */
        html, body {
            height: 100%;
            margin: 0;
             background-color: #e0dbdb86
        }

        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh; /* altezza minima della pagina */
        }

        #pageId {
            flex: 1; /* occupa lo spazio rimanente tra header e footer */
        }

        /* HEADER personalizzato */
        .header-custom {
            background-color: #2A4494 !important;
        }

        /* FOOTER personalizzato */
        .footer-custom {
            background-color: #2A4494 !important;
        }

        /* Testo bianco */
        .header-custom .navbar-nav .nav-link,
        .header-custom .navbar-brand,
        .footer-custom,
        .footer-custom a {
            color: #ffffff !important;
        }

        /* Hover elegante */
        .header-custom .nav-link:hover,
        .footer-custom a:hover {
            opacity: 0.8;
            transition: opacity 0.2s ease-in-out;
        }

        /* Tasto logout personalizzato */
        .logout-btn {
            background-color: #D5202C !important; 
            color: #ffffff !important;           /* testo bianco */
            padding: 5px 12px;
            display: inline-flex;
            align-items: center;
            gap: 5px;                            /* spazio tra icona e testo */
            transition: opacity 0.2s ease-in-out;
        }

        .logout-btn:hover {
            opacity: 0.8;
            text-decoration: none;
        }

        /* Page title indicator */
        .page-title-indicator {
            font-weight: 500;
            font-size: 1.1rem;
            opacity: 0.9;
        }

        /* Navbar separator */
        .navbar-separator {
            width: 1px;
            height: 30px;
            background-color: rgba(255, 255, 255, 0.3);
            align-self: center;
        }

        /* Active navigation item */
        .nav-link.active {
            background-color: rgba(255, 255, 255, 0.15) !important;
            border-radius: 4px;
            font-weight: 500;
        }

        .nav-link:hover {
            background-color: rgba(255, 255, 255, 0.1) !important;
            border-radius: 4px;
        }

        /* Logo styling */
        .navbar-brand img {
            max-height: 40px;
            object-fit: contain;
        }
    </style>
}

<div id="pageId">
    <div class="sticky-top" id="onit-page-sticky-top">
        <nav class="navbar navbar-expand-lg navbar-dark header-custom">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" href="/">
                    <img src="~/images/logo.png" alt="Plurby Logo" class="me-3" style="height: 40px; width: auto;" onerror="this.style.display='none'; this.nextElementSibling.style.display='inline';">
                    <span style="display: none;">Plurby</span>
                </a>
                
                <!-- Page Title Indicator -->
                <div class="navbar-text text-white ms-4 d-none d-md-block">
                    <span class="page-title-indicator">@ViewData["Title"]</span>
                </div>

                <!-- Separator -->
                <div class="navbar-separator d-none d-md-block ms-4 me-4"></div>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="visually-hidden">Toggle navigation</span>
                    <i class="fa-solid fa-bars"></i>
                </button>
                <div class="collapse navbar-collapse flex-wrap" id="navbarSupportedContent">
                    <ul class="nav navbar-nav me-auto ms-md-3">
                        @if (identitaCorrente != null)
                        {
                            @if (identitaCorrente.Role == Plurby.Services.Shared.UserRole.Manager)
                            {
                                <li class="nav-item">
                                    <a class="nav-link px-3 @(ViewContext.RouteData.Values["action"]?.ToString() == "ManagerIndex" || ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")" asp-action="ManagerIndex" asp-controller="Home">
                                        <i class="fa-solid fa-gauge me-1"></i>Dashboard
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link px-3 @(ViewContext.RouteData.Values["action"]?.ToString() == "EmployeesManagement" ? "active" : "")" asp-action="EmployeesManagement" asp-controller="Home">
                                        <i class="fa-solid fa-users me-1"></i>Dipendenti
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link px-3 @(ViewContext.RouteData.Values["action"]?.ToString() == "AccountsManagement" ? "active" : "")" asp-action="AccountsManagement" asp-controller="Home">
                                        <i class="fa-solid fa-user-gear me-1"></i>Account
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link px-3 @(ViewContext.RouteData.Values["action"]?.ToString() == "EmployeeDashboard" || ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")" asp-action="Index" asp-controller="Home">
                                        <i class="fa-solid fa-gauge me-1"></i>Dashboard
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link px-3 @(ViewContext.RouteData.Values["action"]?.ToString() == "EmployeeHistory" ? "active" : "")" asp-action="EmployeeHistory" asp-controller="Home">
                                        <i class="fa-solid fa-clock-rotate-left me-1"></i>Storico
                                    </a>
                                </li>
                            }
                        }
                    </ul>
                    <ul class="nav navbar-nav ms-auto">
                        @if (identitaCorrente != null)
                        {
                            <li class="nav-item dropdown">
                                <a href="#" class="nav-link dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fa-solid fa-user me-1"></i>@identitaCorrente.EmailUtenteCorrente
                                </a>
                                <div class="dropdown-menu dropdown-menu-dark dropdown-menu-end" role="menu">
                                    <a class="dropdown-item logout-btn" href="javascript:void(0)" onclick="javascript: document.getElementById('POST_LogOut').submit()" title="@SharedLocalizer["Chiudi sessione di lavoro"]">
                                        <i class="fa-solid fa-right-from-bracket"></i>&nbsp;@SharedLocalizer["Esci"]
                                    </a>
                                    <form autocomplete="off" method="post" action="@Url.Action(MVC.Login.Logout())" id="POST_LogOut" display="none"></form>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>

        @RenderSection("pageTitle", false)
    </div>

    @RenderSection("pageSubtitle", false)
    @RenderBody()
</div>

<!-- FOOTER sempre in fondo -->
<footer class="footer-custom py-3 mt-5">
    <div class="container text-center">
        <span>© 2025 Plurby — Spitaleri & Dominici</span>
    </div>
</footer>

@section scripts{
    <script type="text/javascript">
        @this.RenderAlertsWithToastify()
    </script>

    @RenderSection("scripts", false)
}
