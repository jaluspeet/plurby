@model Plurby.Web.Features.Employee.EmployeeIndexViewModel
@{
    ViewData["Title"] = "Employee Dashboard";
}

<div class="container mt-5 text-center">
    <h1>Marcatempo</h1>
    
    <div class="my-5">
        @if (Model.Status.IsWorking)
        {
            <div class="alert alert-success">
                Working since: @Model.Status.StartTime?.ToLocalTime().ToString("g")
            </div>
            <form asp-action="End" method="post">
                <button type="submit" class="btn btn-danger btn-lg px-5 py-3">END</button>
            </form>
        }
        else
        {
            <form asp-action="Start" method="post">
                <button type="submit" class="btn btn-success btn-lg px-5 py-3">START</button>
            </form>
        }
    </div>

    <hr />

    <h3>History</h3>
    <table class="table table-striped text-start">
        <thead>
            <tr>
                <th>Start</th>
                <th>End</th>
                <th>Duration (Hours)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.History)
            {
                <tr>
                    <td>@item.StartTime.ToLocalTime().ToString("g")</td>
                    <td>@item.EndTime?.ToLocalTime().ToString("g")</td>
                    <td>@item.DurationHours?.ToString("F2")</td>
                </tr>
            }
        </tbody>
    </table>
</div>