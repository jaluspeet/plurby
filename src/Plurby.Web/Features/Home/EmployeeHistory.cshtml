@model Plurby.Web.Features.Home.EmployeeHistoryViewModel
@using Plurby.Web.Areas
@{
    var identitaCorrente = ViewData[IdentitaViewModel.VIEWDATA_IDENTITACORRENTE_KEY] as IdentitaViewModel;
    var userName = (identitaCorrente?.FirstName != null && identitaCorrente?.LastName != null) 
        ? $"{identitaCorrente.FirstName} {identitaCorrente.LastName}" 
        : "My";
    ViewData["Title"] = $"Work History of {userName}";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>@userName's Work History</h2>
        <a asp-action="Index" class="btn btn-secondary">Back to Dashboard</a>
    </div>
    
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Start Time</th>
                <th>End Time</th>
                <th>Duration</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var entry in Model.History)
            {
                <tr>
                    <td>@entry.StartTime.ToLocalTime().ToString("g")</td>
                    <td>@(entry.EndTime.HasValue ? entry.EndTime.Value.ToLocalTime().ToString("g") : "-")</td>
                    <td>@(entry.Duration.HasValue ? entry.Duration.Value.ToString(@"hh\:mm\:ss") : "-")</td>
                </tr>
            }
        </tbody>
    </table>
</div>