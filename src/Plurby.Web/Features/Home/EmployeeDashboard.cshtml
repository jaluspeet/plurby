@model Plurby.Web.Features.Home.EmployeeDashboardViewModel
@using Plurby.Web.Areas
@using Plurby.Web.Infrastructure
@{
    var identitaCorrente = ViewData[IdentitaViewModel.VIEWDATA_IDENTITACORRENTE_KEY] as IdentitaViewModel;
    var userName = (identitaCorrente?.FirstName != null && identitaCorrente?.LastName != null) 
        ? $"{identitaCorrente.FirstName} {identitaCorrente.LastName}" 
        : "utente";
    ViewData["Title"] = $"Dashboard di {userName}";
}

<div class="container mt-4 text-center">
    <div class="d-flex justify-content-between align-items-center">
        <h2>Ciao, @userName!</h2>
    </div>
    <div class="mb-5">
        @if (Model.Status.IsWorking)
        {
            <h2 class="mb-3">Stai lavorando</h2>
            <div class="mb-4">
                <h3 id="timer" class="text-primary">00:00:00</h3>
                <p class="text-muted">Ora di inizio: @Model.Status.StartTime.Value.ToLocalTime().ToString("g")</p>
            </div>
            <button type="button" class="btn btn-lg px-5 py-3" style="background-color:#D5202C; color:white; border-radius:12px;" data-bs-toggle="modal" data-bs-target="#confirmEndWorkModal">
                <i class="bi bi-stop-circle me-2"></i> TERMINA LAVORO
            </button>
        }
        else
        {
            <h2 class="mb-4">Pronto per iniziare?</h2>
            <form asp-action="StartWork" method="post">
                <button type="submit" class="btn btn-lg px-5 py-3" style="background-color:#0B6E4F; color:white; border-radius:12px;">
                    <i class="bi bi-play-circle me-2"></i> INIZIA LAVORO
                </button>
            </form>
        }
    </div>

    <hr />

    <!-- Voci di oggi -->
    @if (Model.TodayEntries.Any())
    {
        <div class="mb-4">
                <h4 class="mb-1">Lavoro di oggi</h4>
        <p class="text-muted mb-3">
            @DateTime.Now.ToString("dddd dd MMMM yyyy", 
                new System.Globalization.CultureInfo("it-IT"))
        </p>

            <div class="card">
                <div class="card-body p-0">
                    <table class="table table-striped mb-0">
                        <thead>
                            <tr>
                                <th>Inizio</th>
                                <th>Fine</th>
                                <th>Durata</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var entry in Model.TodayEntries)
                            {
                                <tr>
                                    <td>@entry.StartTime.ToLocalTime().ToString("HH:mm")</td>
                                    <td>@(entry.EndTime.HasValue ? entry.EndTime.Value.ToLocalTime().ToString("HH:mm") : "-")</td>
                                    <td>@TimeFormatter.FormatItalian(entry.Duration)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }


</div>

<!-- Confirmation Modal for End Work -->
@if (Model.Status.IsWorking && Model.Status.StartTime.HasValue)
{
    <div class="modal fade" id="confirmEndWorkModal" tabindex="-1" aria-labelledby="confirmEndWorkModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="confirmEndWorkModalLabel">Conferma Termina Lavoro</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p class="mb-3">Confermi di voler terminare questa sessione di lavoro?</p>
                    <div class="card bg-light mb-3">
                        <div class="card-body">
                            <div class="row mb-2">
                                <div class="col-5"><strong>Inizio:</strong></div>
                                <div class="col-7" id="modalStartTime">@Model.Status.StartTime.Value.ToLocalTime().ToString("g")</div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-5"><strong>Fine:</strong></div>
                                <div class="col-7" id="modalEndTime">-</div>
                            </div>
                            <div class="row">
                                <div class="col-5"><strong>Durata:</strong></div>
                                <div class="col-7" id="modalDuration">-</div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annulla</button>
                    <form asp-action="EndWork" method="post" style="display: inline;">
                        <button type="submit" class="btn" style="background-color:#D5202C; color:white;">
                            <i class="bi bi-stop-circle me-2"></i> Conferma e Termina
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

@if (Model.Status.IsWorking && Model.Status.StartTime.HasValue)
{
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var startTime = new Date('@Model.Status.StartTime.Value.ToString("o")');
            var timerElement = document.getElementById('timer');

            function formatItalianTime(hours, minutes) {
                var parts = [];
                if (hours > 0) {
                    parts.push(hours + " " + (hours === 1 ? "ora" : "ore"));
                }
                if (minutes > 0) {
                    parts.push(minutes + " minuti");
                }
                if (parts.length === 0) {
                    return "0 minuti";
                }
                return parts.join(" e ");
            }

            function updateTimer() {
                var now = new Date();
                var diff = now - startTime;
                
                var seconds = Math.floor((diff / 1000) % 60);
                var minutes = Math.floor((diff / (1000 * 60)) % 60);
                var hours = Math.floor((diff / (1000 * 60 * 60)));

                timerElement.textContent = formatItalianTime(hours, minutes);
            }

            setInterval(updateTimer, 1000);
            updateTimer();

            // Update modal with current time when it opens
            var confirmModal = document.getElementById('confirmEndWorkModal');
            if (confirmModal) {
                confirmModal.addEventListener('show.bs.modal', function () {
                    var now = new Date();
                    var diff = now - startTime;
                    
                    var minutes = Math.floor((diff / (1000 * 60)) % 60);
                    var hours = Math.floor((diff / (1000 * 60 * 60)));
                    
                    // Format date to match the format used in the app
                    var day = String(now.getDate()).padStart(2, '0');
                    var month = String(now.getMonth() + 1).padStart(2, '0');
                    var year = now.getFullYear();
                    var hoursClock = String(now.getHours()).padStart(2, '0');
                    var minutesClock = String(now.getMinutes()).padStart(2, '0');
                    document.getElementById('modalEndTime').textContent = day + '/' + month + '/' + year + ' ' + hoursClock + ':' + minutesClock;
                    document.getElementById('modalDuration').textContent = formatItalianTime(hours, minutes);
                });
            }
        });
    </script>
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
