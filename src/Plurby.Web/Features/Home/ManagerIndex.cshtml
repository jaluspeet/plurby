@{
    ViewData["Title"] = "Dashboard Manager";
}

<div class="container mt-4 text-center">
    <h1 class="mb-2">Dashboard Manager</h1>
    <h4 class="mb-4" style="color: black; font-weight: 400;">Cosa vuoi fare?</h4>
    
     <div class="row justify-content-center g-4">
         <div class="col-md-5 mb-3">
             <div class="card h-100" style="background-color: #2A4494; border-radius: 15px;">
                 <div class="card-body text-center text-white d-flex flex-column justify-content-center p-4">
                     <h3 class="card-title mb-3">Dipendenti</h3>
                     <p class="card-text mb-0">Gestisci dipendenti e visualizza il loro storico ore</p>
                 </div>
             </div>
         </div>
         <div class="col-md-5 mb-3">
             <div class="card h-100" style="background-color: #2A4494; border-radius: 15px;">
                 <div class="card-body text-center text-white d-flex flex-column justify-content-center p-4">
                     <h3 class="card-title mb-3">Account</h3>
                     <p class="card-text mb-0">Crea, modifica o elimina account utente</p>
                 </div>
             </div>
         </div>
     </div>
</div>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
