@{
    ViewData["Title"] = "Dashboard Manager";
}

<div class="container mt-4 text-center">
    <h1 class="mb-2">Dashboard Manager</h1>
    <h4 class="mb-4" style="color: black; font-weight: 400;">Cosa vuoi fare?</h4>
    
    <div class="row justify-content-center">
        <div class="col-md-5 mb-3">
            <div class="card" style="background-color: #2A4494; border-radius: 15px; height: 180px;">
                <div class="card-body text-center text-white d-flex flex-column justify-content-center">
                    <h3 class="card-title">Dipendenti</h3>
                    <p class="card-text">Gestisci dipendenti, calcola lo stipendio mensile</p>
                    <a asp-action="EmployeesManagement" class="btn btn-lg d-flex align-items-center justify-content-center" style="background-color: #0B6E4F; color: white; border-radius: 15px; padding: 10px 25px;">
                        <i class="bi bi-people-fill me-2"></i>Gestisci Dipendenti
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-5 mb-3">
            <div class="card" style="background-color: #2A4494; border-radius: 15px; height: 180px;">
                <div class="card-body text-center text-white d-flex flex-column justify-content-center">
                    <h3 class="card-title">Account</h3>
                    <p class="card-text">Crea, modifica o elimina account utente</p>
                    <a asp-action="AccountsManagement" class="btn btn-lg d-flex align-items-center justify-content-center" style="background-color: #FF8D28; color: white; border-radius: 15px; padding: 10px 25px;">
                        <i class="bi bi-person-circle me-2"></i>Gestisci Account
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
