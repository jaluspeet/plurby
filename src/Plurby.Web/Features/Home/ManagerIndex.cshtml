@{
    ViewData["Title"] = "Manager Dashboard";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Manager Dashboard</h1>
        <form asp-controller="Login" asp-action="Logout" method="post">
            <button type="submit" class="btn btn-outline-danger">Logout</button>
        </form>
    </div>
    
    <div class="row">
        <div class="col-md-6 mb-3">
            <div class="card h-100">
                <div class="card-body text-center">
                    <h3 class="card-title">Employees</h3>
                    <p class="card-text">View and manage employee work status and history</p>
                    <a asp-action="EmployeesManagement" class="btn btn-primary btn-lg">Manage Employees</a>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="card h-100">
                <div class="card-body text-center">
                    <h3 class="card-title">Accounts</h3>
                    <p class="card-text">Create, modify, or delete user accounts</p>
                    <a asp-action="AccountsManagement" class="btn btn-success btn-lg">Manage Accounts</a>
                </div>
            </div>
        </div>
    </div>
</div>