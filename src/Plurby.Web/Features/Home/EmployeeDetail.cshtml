@model Plurby.Web.Features.Home.EmployeeDetailViewModel
@using System.Linq
@using Plurby.Web.Infrastructure
@{
    ViewData["Title"] = $"Storico: {Model.User.FirstName} {Model.User.LastName}";
    
    var groupedHistory = Model.History
        .GroupBy(e => new { e.StartTime.Year, e.StartTime.Month })
        .OrderByDescending(g => g.Key.Year)
        .ThenByDescending(g => g.Key.Month)
        .ToList();
    
    var currentMonth = DateTime.Now.Year * 100 + DateTime.Now.Month;
    var selectedMonth = Context.Request.Query["month"].FirstOrDefault();
    int monthFilter = string.IsNullOrEmpty(selectedMonth) ? currentMonth : int.Parse(selectedMonth);
    
    var selectedMonthEntries = Model.History
        .Where(e => e.StartTime.Year * 100 + e.StartTime.Month == monthFilter)
        .OrderByDescending(e => e.StartTime)
        .ToList();
    
    var groupedByDay = selectedMonthEntries
        .GroupBy(e => e.StartTime.Date)
        .OrderByDescending(g => g.Key)
        .ToList();
    
    double selectedMonthHours = 0;
    foreach (var entry in selectedMonthEntries)
    {
        if (entry.Duration.HasValue)
        {
            selectedMonthHours += entry.Duration.Value.TotalHours;
        }
    }
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="d-flex align-items-center">
            <h1 class="me-3">Storico: @Model.User.FirstName @Model.User.LastName</h1>

            <!-- Selettore mese moderno con icona e freccia -->
            <div class="btn-group">
                <button type="button" class="btn text-white d-flex align-items-center justify-content-center" 
                        id="prevMonth" title="Mese precedente" style="background-color:#2A4494; font-size:1.5rem; padding:0.5rem 1rem;">
                    <i class="bi bi-arrow-left-circle"></i>
                </button>

                <button type="button" class="btn text-white dropdown-toggle d-flex align-items-center justify-content-between" 
                        data-bs-toggle="dropdown" id="currentMonthBtn" style="background-color:#2A4494; font-size:1rem; padding:0.5rem 1rem; min-width:220px;">
                    <i class="bi bi-calendar3 me-2"></i>
                    @{
                        var displayDate = new DateTime(monthFilter / 100, monthFilter % 100, 1);
                    }
                    <span>@displayDate.ToString("MMMM yyyy")</span>
                    <i class="bi bi-chevron-down ms-2"></i>
                </button>

                <ul class="dropdown-menu" id="monthDropdown">
                    @foreach (var group in groupedHistory)
                    {
                        var monthValue = group.Key.Year * 100 + group.Key.Month;
                        var monthDate = new DateTime(group.Key.Year, group.Key.Month, 1);
                        <li><a class="dropdown-item @(monthValue == monthFilter ? "active" : "")" href="#" data-month="@monthValue">@monthDate.ToString("MMMM yyyy")</a></li>
                    }
                </ul>

                <button type="button" class="btn text-white d-flex align-items-center justify-content-center" 
                        id="nextMonth" title="Mese successivo" style="background-color:#2A4494; font-size:1.5rem; padding:0.5rem 1rem;">
                    <i class="bi bi-arrow-right-circle"></i>
                </button>
            </div>
        </div>



    </div>

    <!-- Riepilogo ore -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card text-white" style="background-color:#2A4494; height:150px;">
                <div class="card-body d-flex flex-column justify-content-center align-items-center">
                    <h5 class="card-title">Ore mese selezionato</h5>
                    <h3 class="text-white">@Math.Round(selectedMonthHours, 1) ore</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Error message display -->
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
            <i class="bi bi-check-circle me-2"></i>
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Entries raggruppate per giorno -->
    @if (selectedMonthEntries.Any())
    {
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h5 class="mb-0">Lavoro - @(new DateTime(monthFilter / 100, monthFilter % 100, 1).ToString("MMMM yyyy"))</h5>
            @if (ViewData["IsManager"] as bool? == true)
            {
                <button type="button" class="btn btn-success btn-sm" onclick="openAddNewEntryModal()">
                    <i class="bi bi-plus-circle me-2"></i>
                    Aggiungi
                </button>
            }
        </div>

        @foreach (var dayGroup in groupedByDay)
        {
            var dayTotalHours = dayGroup.Where(e => e.Duration.HasValue).Sum(e => e.Duration.Value.TotalHours);
            
            <div class="card mb-3">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h6 class="mb-0">
                        <i class="bi bi-calendar3 me-2"></i>
                        @dayGroup.Key.ToString("dddd d MMMM yyyy")
                        <span class="badge bg-primary ms-2">@TimeFormatter.FormatItalian(TimeSpan.FromHours(dayTotalHours))</span>
                    </h6>
                </div>
                <div class="card-body p-0">
                    <table class="table table-striped mb-0">
                        <thead>
                            <tr>
                                <th>Inizio</th>
                                <th>Fine</th>
                                <th>Durata</th>
                                @if (ViewData["IsManager"] as bool? == true)
                                {
                                    <th>Azioni</th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var entry in dayGroup.OrderByDescending(e => e.StartTime))
                            {
                                <tr class="@(entry.HasPendingProposal || entry.IsNewEntryProposal ? "table-warning" : "")">
                                    <td>
                                        @entry.StartTime.ToLocalTime().ToString("HH:mm")
                                        @if (entry.IsNewEntryProposal)
                                        {
                                            <span class="badge bg-info ms-2">
                                                <i class="bi bi-plus-circle"></i> Nuova
                                            </span>
                                        }
                                    </td>
                                    <td>@(entry.EndTime.HasValue ? entry.EndTime.Value.ToLocalTime().ToString("HH:mm") : "-")</td>
                                    <td>@TimeFormatter.FormatItalian(entry.Duration)</td>
                                    @if (ViewData["IsManager"] as bool? == true)
                                    {
                                        <td>
                                            @if (entry.IsNewEntryProposal)
                                            {
                                                <span class="badge bg-info me-2">
                                                    <i class="bi bi-plus-circle"></i> Proposta nuova
                                                </span>
                                                <form method="post" asp-action="AcceptProposal" style="display: inline;">
                                                    <input type="hidden" name="proposalId" value="@entry.ProposalId" />
                                                    <input type="hidden" name="employeeId" value="@Model.User.Id" />
                                                    <input type="hidden" name="month" value="@(Context.Request.Query["month"].FirstOrDefault())" />
                                                    <button type="submit" class="btn btn-sm btn-success me-2" title="Accetta proposta">
                                                        <i class="bi bi-check-circle"></i>
                                                    </button>
                                                </form>
                                                <form method="post" asp-action="RejectProposal" style="display: inline;">
                                                    <input type="hidden" name="proposalId" value="@entry.ProposalId" />
                                                    <input type="hidden" name="employeeId" value="@Model.User.Id" />
                                                    <input type="hidden" name="month" value="@(Context.Request.Query["month"].FirstOrDefault())" />
                                                    <button type="submit" class="btn btn-sm btn-danger" title="Rifiuta proposta">
                                                        <i class="bi bi-x-circle"></i>
                                                    </button>
                                                </form>
                                            }
                                            else if (entry.HasPendingProposal)
                                            {
                                                <span class="badge bg-warning text-dark me-2">
                                                    <i class="bi bi-exclamation-triangle"></i> Proposta
                                                </span>
                                                <button type="button" class="btn btn-sm btn-primary edit-entry-btn" 
                                                        data-entry-id="@entry.Id"
                                                        data-start-time="@entry.StartTime.ToLocalTime().ToString("yyyy-MM-ddTHH:mm")"
                                                        data-end-time="@(entry.EndTime.HasValue ? entry.EndTime.Value.ToLocalTime().ToString("yyyy-MM-ddTHH:mm") : "")"
                                                        data-employee-id="@Model.User.Id"
                                                        data-has-proposal="@(entry.HasPendingProposal ? "true" : "false")"
                                                        data-proposal-id="@(entry.ProposalId?.ToString() ?? "")"
                                                        data-proposed-start-time="@(entry.ProposedStartTime.HasValue ? entry.ProposedStartTime.Value.ToLocalTime().ToString("yyyy-MM-ddTHH:mm") : "")"
                                                        data-proposed-end-time="@(entry.ProposedEndTime.HasValue ? entry.ProposedEndTime.Value.ToLocalTime().ToString("yyyy-MM-ddTHH:mm") : "")">
                                                    <i class="bi bi-pencil"></i> Modifica
                                                </button>
                                            }
                                            else
                                            {
                                                <button type="button" class="btn btn-sm btn-primary edit-entry-btn" 
                                                        data-entry-id="@entry.Id"
                                                        data-start-time="@entry.StartTime.ToLocalTime().ToString("yyyy-MM-ddTHH:mm")"
                                                        data-end-time="@(entry.EndTime.HasValue ? entry.EndTime.Value.ToLocalTime().ToString("yyyy-MM-ddTHH:mm") : "")"
                                                        data-employee-id="@Model.User.Id"
                                                        data-has-proposal="false"
                                                        data-proposal-id=""
                                                        data-proposed-start-time=""
                                                        data-proposed-end-time="">
                                                    <i class="bi bi-pencil"></i> Modifica
                                                </button>
                                            }
                                        </td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>
            Nessuna voce di lavoro trovata per @(new DateTime(monthFilter / 100, monthFilter % 100, 1).ToString("MMMM yyyy")).
        </div>
    }
</div>

<!-- Modal per modificare work entry -->
<div class="modal fade" id="editWorkEntryModal" tabindex="-1" aria-labelledby="editWorkEntryModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editWorkEntryModalLabel">Modifica voce</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="editWorkEntryForm" method="post" asp-action="EditWorkEntry">
                <div class="modal-body">
                    <input type="hidden" id="workEntryId" name="workEntryId" />
                    <input type="hidden" id="employeeId" name="employeeId" />
                    <input type="hidden" id="month" name="month" value="@(Context.Request.Query["month"].FirstOrDefault())" />
                    <input type="hidden" id="proposalId" />
                    
                    <!-- Proposal alert -->
                    <div id="proposalAlert" class="alert alert-warning d-none">
                        <h6><i class="bi bi-exclamation-triangle me-2"></i>Proposta in attesa</h6>
                        <p class="mb-2">Modifiche proposte:</p>
                        <ul class="mb-2">
                            <li><strong>Inizio:</strong> <span id="proposedStartTimeDisplay"></span></li>
                            <li><strong>Fine:</strong> <span id="proposedEndTimeDisplay"></span></li>
                        </ul>
                        <p class="mb-0">Accetta, rifiuta o modifica manualmente.</p>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="text-muted mb-3">Attuali</h6>
                            <div class="mb-3">
                                <label class="form-label">Inizio attuale</label>
                                <input type="text" class="form-control" id="currentStartTime" readonly style="background-color: #e9ecef;" />
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Fine attuale</label>
                                <input type="text" class="form-control" id="currentEndTime" readonly style="background-color: #e9ecef;" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted mb-3">Nuovi</h6>
                            <div class="mb-3">
                                <label for="startTime" class="form-label">Inizio</label>
                                <input type="datetime-local" class="form-control" id="startTime" name="startTime" required />
                            </div>
                            
                            <div class="mb-3">
                                <label for="endTime" class="form-label">Fine</label>
                                <input type="datetime-local" class="form-control" id="endTime" name="endTime" required />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annulla</button>
                    <div id="proposalButtons" class="d-none">
                        <form method="post" asp-action="AcceptProposal" style="display: inline;">
                            <input type="hidden" id="acceptProposalId" name="proposalId" />
                            <input type="hidden" id="acceptEmployeeId" name="employeeId" />
                            <input type="hidden" id="acceptMonth" name="month" value="@(Context.Request.Query["month"].FirstOrDefault())" />
                            <button type="submit" class="btn btn-success me-2">
                                <i class="bi bi-check-circle"></i> Accetta proposta
                            </button>
                        </form>
                        <form method="post" asp-action="RejectProposal" style="display: inline;">
                            <input type="hidden" id="rejectProposalId" name="proposalId" />
                            <input type="hidden" id="rejectEmployeeId" name="employeeId" />
                            <input type="hidden" id="rejectMonth" name="month" value="@(Context.Request.Query["month"].FirstOrDefault())" />
                            <button type="submit" class="btn btn-danger me-2">
                                <i class="bi bi-x-circle"></i> Rifiuta proposta
                            </button>
                        </form>
                    </div>
                    <button type="submit" class="btn btn-primary">Salva modifiche</button>
                </div>
            </form>
        </div>
    </div>
</div>

