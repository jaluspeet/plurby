@section scripts {
    <script>
        // Define openEditModal function globally before DOMContentLoaded
        function openEditModal(workEntryId, startTime, endTime, employeeId, hasProposal, proposalId, proposedStartTime, proposedEndTime) {
            try {
                const modalElement = document.getElementById('editWorkEntryModal');
                if (!modalElement) {
                    console.error('Modal element not found');
                    return;
                }

                // Check if Bootstrap is available
                if (typeof bootstrap === 'undefined' || !bootstrap.Modal) {
                    console.error('Bootstrap Modal is not available');
                    return;
                }

                const workEntryIdInput = document.getElementById('workEntryId');
                const employeeIdInput = document.getElementById('employeeId');
                const currentStartTimeInput = document.getElementById('currentStartTime');
                const currentEndTimeInput = document.getElementById('currentEndTime');
                
                if (workEntryIdInput) workEntryIdInput.value = workEntryId;
                if (employeeIdInput) employeeIdInput.value = employeeId;
                
                // Set current values (read-only)
                if (currentStartTimeInput) {
                    currentStartTimeInput.value = new Date(startTime).toLocaleString('it-IT');
                }
                if (currentEndTimeInput) {
                    currentEndTimeInput.value = endTime && endTime.trim() !== '' 
                        ? new Date(endTime).toLocaleString('it-IT') 
                        : '-';
                }
                
                const hasProposalBool = hasProposal === 'true';
                const proposalAlert = document.getElementById('proposalAlert');
                const proposalButtons = document.getElementById('proposalButtons');
                
                if (hasProposalBool && proposalId) {
                    // Show proposal alert
                    if (proposalAlert) proposalAlert.classList.remove('d-none');
                    const proposedStartTimeDisplay = document.getElementById('proposedStartTimeDisplay');
                    const proposedEndTimeDisplay = document.getElementById('proposedEndTimeDisplay');
                    
                    if (proposedStartTimeDisplay) {
                        proposedStartTimeDisplay.textContent = proposedStartTime 
                            ? new Date(proposedStartTime).toLocaleString('it-IT')
                            : '-';
                    }
                    if (proposedEndTimeDisplay) {
                        proposedEndTimeDisplay.textContent = proposedEndTime && proposedEndTime.trim() !== ''
                            ? new Date(proposedEndTime).toLocaleString('it-IT')
                            : '-';
                    }
                    
                    // Show proposal buttons
                    if (proposalButtons) proposalButtons.classList.remove('d-none');
                    const acceptProposalIdInput = document.getElementById('acceptProposalId');
                    const acceptEmployeeIdInput = document.getElementById('acceptEmployeeId');
                    const rejectProposalIdInput = document.getElementById('rejectProposalId');
                    const rejectEmployeeIdInput = document.getElementById('rejectEmployeeId');
                    
                    if (acceptProposalIdInput) acceptProposalIdInput.value = proposalId;
                    if (acceptEmployeeIdInput) acceptEmployeeIdInput.value = employeeId;
                    if (rejectProposalIdInput) rejectProposalIdInput.value = proposalId;
                    if (rejectEmployeeIdInput) rejectEmployeeIdInput.value = employeeId;
                    
                    // Pre-fill with proposed values
                    const startTimeInput = document.getElementById('startTime');
                    const endTimeInput = document.getElementById('endTime');
                    
                    if (startTimeInput) {
                        startTimeInput.value = proposedStartTime || startTime;
                    }
                    
                    if (endTimeInput) {
                        if (proposedEndTime && proposedEndTime.trim() !== '') {
                            endTimeInput.value = proposedEndTime;
                        } else if (endTime && endTime.trim() !== '') {
                            endTimeInput.value = endTime;
                        } else {
                            endTimeInput.value = '';
                        }
                    }
                } else {
                    // Hide proposal alert and buttons
                    if (proposalAlert) proposalAlert.classList.add('d-none');
                    if (proposalButtons) proposalButtons.classList.add('d-none');
                    
                    // Set current values as editable
                    const startTimeInput = document.getElementById('startTime');
                    const endTimeInput = document.getElementById('endTime');
                    
                    if (startTimeInput) {
                        startTimeInput.value = startTime;
                    }
                    
                    if (endTimeInput) {
                        if (endTime && endTime.trim() !== '') {
                            endTimeInput.value = endTime;
                        } else {
                            endTimeInput.value = '';
                        }
                    }
                }
                
                // Initialize and show modal
                const modal = new bootstrap.Modal(modalElement);
                modal.show();
            } catch (error) {
                console.error('Error opening edit modal:', error);
                alert('Si è verificato un errore nell\'apertura della finestra di modifica. Controlla la console per i dettagli.');
            }
        }

        // Define openAddNewEntryModal function for managers
        function openAddNewEntryModal() {
            try {
                const modalElement = document.getElementById('addNewEntryModal');
                if (!modalElement) {
                    console.error('Add new entry modal element not found');
                    return;
                }

                // Clear form
                const startTimeInput = document.getElementById('addNewStartTime');
                const endTimeInput = document.getElementById('addNewEndTime');
                
                if (startTimeInput) startTimeInput.value = '';
                if (endTimeInput) endTimeInput.value = '';
                
                // Initialize and show modal
                const modal = new bootstrap.Modal(modalElement);
                modal.show();
            } catch (error) {
                console.error('Error opening add new entry modal:', error);
                alert('Si è verificato un errore nell\'apertura della finestra di aggiunta. Controlla la console per i dettagli.');
            }
        }



        document.addEventListener('DOMContentLoaded', function() {

            const prevMonthBtn = document.getElementById('prevMonth');
            const nextMonthBtn = document.getElementById('nextMonth');
            const monthDropdownItems = document.querySelectorAll('#monthDropdown .dropdown-item');

            function navigateMonth(direction) {
                const urlParams = new URLSearchParams(window.location.search);
                const currentMonth = parseInt(urlParams.get('month') || '@(DateTime.Now.Year * 100 + DateTime.Now.Month)');

                let newYear = Math.floor(currentMonth / 100);
                let newMonth = currentMonth % 100;

                if (direction === 'prev') {
                    newMonth--;
                    if (newMonth < 1) {
                        newMonth = 12;
                        newYear--;
                    }
                } else {
                    newMonth++;
                    if (newMonth > 12) {
                        newMonth = 1;
                        newYear++;
                    }
                }

                const newMonthValue = newYear * 100 + newMonth;
                urlParams.set('month', newMonthValue);
                window.location.search = urlParams.toString();
            }

            prevMonthBtn.addEventListener('click', () => navigateMonth('prev'));
            nextMonthBtn.addEventListener('click', () => navigateMonth('next'));

            monthDropdownItems.forEach(item => {
                item.addEventListener('click', function(e) {
                    e.preventDefault();
                    const monthValue = this.getAttribute('data-month');
                    const urlParams = new URLSearchParams(window.location.search);
                    urlParams.set('month', monthValue);
                    window.location.search = urlParams.toString();
                });
            });

            // Handle clear end time checkbox


            // Attach event listeners to edit buttons using data attributes
            const editButtons = document.querySelectorAll('.edit-entry-btn');
            editButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const entryId = this.getAttribute('data-entry-id');
                    const startTime = this.getAttribute('data-start-time');
                    const endTime = this.getAttribute('data-end-time') || '';
                    const employeeId = this.getAttribute('data-employee-id');
                    const hasProposal = this.getAttribute('data-has-proposal') || 'false';
                    const proposalId = this.getAttribute('data-proposal-id') || '';
                    const proposedStartTime = this.getAttribute('data-proposed-start-time') || '';
                    const proposedEndTime = this.getAttribute('data-proposed-end-time') || '';
                    
                    openEditModal(entryId, startTime, endTime, employeeId, hasProposal, proposalId, proposedStartTime, proposedEndTime);
                });
            });
        });
    </script>
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

