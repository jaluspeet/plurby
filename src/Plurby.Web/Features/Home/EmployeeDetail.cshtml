@model Plurby.Web.Features.Home.EmployeeDetailViewModel
@using System.Linq
@{
    ViewData["Title"] = $"Storico: {Model.User.FirstName} {Model.User.LastName}";
    
    var groupedHistory = Model.History
        .GroupBy(e => new { e.StartTime.Year, e.StartTime.Month })
        .OrderByDescending(g => g.Key.Year)
        .ThenByDescending(g => g.Key.Month)
        .ToList();
    
    var currentMonth = DateTime.Now.Year * 100 + DateTime.Now.Month;
    var selectedMonth = Context.Request.Query["month"].FirstOrDefault();
    int monthFilter = string.IsNullOrEmpty(selectedMonth) ? currentMonth : int.Parse(selectedMonth);
    
    var selectedMonthEntries = Model.History
        .Where(e => e.StartTime.Year * 100 + e.StartTime.Month == monthFilter)
        .OrderByDescending(e => e.StartTime)
        .ToList();
    
    double selectedMonthHours = 0;
    foreach (var entry in selectedMonthEntries)
    {
        if (entry.Duration.HasValue)
        {
            selectedMonthHours += entry.Duration.Value.TotalHours;
        }
    }
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="d-flex align-items-center">
            <h1 class="me-3">Storico: @Model.User.FirstName @Model.User.LastName</h1>

            <!-- Selettore mese moderno con icona e freccia -->
            <div class="btn-group">
                <button type="button" class="btn text-white d-flex align-items-center justify-content-center" 
                        id="prevMonth" title="Mese precedente" style="background-color:#2A4494; font-size:1.5rem; padding:0.5rem 1rem;">
                    <i class="bi bi-arrow-left-circle"></i>
                </button>

                <button type="button" class="btn text-white dropdown-toggle d-flex align-items-center justify-content-between" 
                        data-bs-toggle="dropdown" id="currentMonthBtn" style="background-color:#2A4494; font-size:1rem; padding:0.5rem 1rem; min-width:220px;">
                    <i class="bi bi-calendar3 me-2"></i>
                    @{
                        var displayDate = new DateTime(monthFilter / 100, monthFilter % 100, 1);
                    }
                    <span>@displayDate.ToString("MMMM yyyy")</span>
                    <i class="bi bi-chevron-down ms-2"></i>
                </button>

                <ul class="dropdown-menu" id="monthDropdown">
                    @foreach (var group in groupedHistory)
                    {
                        var monthValue = group.Key.Year * 100 + group.Key.Month;
                        var monthDate = new DateTime(group.Key.Year, group.Key.Month, 1);
                        <li><a class="dropdown-item @(monthValue == monthFilter ? "active" : "")" href="#" data-month="@monthValue">@monthDate.ToString("MMMM yyyy")</a></li>
                    }
                </ul>

                <button type="button" class="btn text-white d-flex align-items-center justify-content-center" 
                        id="nextMonth" title="Mese successivo" style="background-color:#2A4494; font-size:1.5rem; padding:0.5rem 1rem;">
                    <i class="bi bi-arrow-right-circle"></i>
                </button>
            </div>
        </div>

       <a asp-action="EmployeesManagement" class="btn btn-secondary d-flex align-items-center">
    <i class="bi bi-arrow-left me-2"></i>
    Torna ai dipendenti
</a>

    </div>

    <!-- Riepilogo ore e stipendio -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card text-white" style="background-color:#2A4494; height:150px;">
                <div class="card-body d-flex flex-column justify-content-center align-items-center">
                    <h5 class="card-title">Ore mese selezionato</h5>
                    <h3 class="text-white">@Math.Round(selectedMonthHours, 1) ore</h3>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card text-white" style="background-color:#2A4494; height:150px;">
                <div class="card-body d-flex flex-column justify-content-center align-items-center">
                    <h5 class="card-title">Calcola stipendio mensile</h5>
                    <div class="mb-2 w-50">
                        <input type="number" id="hourlyRate" class="form-control" placeholder="Tariffa oraria (€)" step="0.01" min="0">
                    </div>
                    <h4 class="text-white" id="monthlyPay">€0.00</h4>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabella entries per mese -->
    @if (selectedMonthEntries.Any())
    {
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">Entries lavoro - @(new DateTime(monthFilter / 100, monthFilter % 100, 1).ToString("MMMM yyyy"))</h5>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped mb-0">
                    <thead>
                        <tr>
                            <th>Ora inizio</th>
                            <th>Ora fine</th>
                            <th>Durata</th>
                            @if (ViewData["IsManager"] as bool? == true)
                            {
                                <th>Azioni</th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var entry in selectedMonthEntries)
                        {
                            <tr class="@(entry.HasPendingProposal ? "table-warning" : "")">
                                <td>@entry.StartTime.ToLocalTime().ToString("g")</td>
                                <td>@(entry.EndTime.HasValue ? entry.EndTime.Value.ToLocalTime().ToString("g") : "-")</td>
                                <td>@(entry.Duration.HasValue ? entry.Duration.Value.ToString(@"hh\:mm\:ss") : "-")</td>
                                @if (ViewData["IsManager"] as bool? == true)
                                {
                                    <td>
                                        @if (entry.HasPendingProposal)
                                        {
                                            <span class="badge bg-warning text-dark me-2">
                                                <i class="bi bi-exclamation-triangle"></i> Proposta in attesa
                                            </span>
                                        }
                                        <button type="button" class="btn btn-sm btn-primary" onclick="openEditModal('@entry.Id', '@entry.StartTime.ToLocalTime().ToString("yyyy-MM-ddTHH:mm")', '@(entry.EndTime.HasValue ? entry.EndTime.Value.ToLocalTime().ToString("yyyy-MM-ddTHH:mm") : "")', '@Model.User.Id', '@(entry.HasPendingProposal ? "true" : "false")', '@(entry.ProposalId?.ToString() ?? "")', '@(entry.ProposedStartTime.HasValue ? entry.ProposedStartTime.Value.ToLocalTime().ToString("yyyy-MM-ddTHH:mm") : "")', '@(entry.ProposedEndTime.HasValue ? entry.ProposedEndTime.Value.ToLocalTime().ToString("yyyy-MM-ddTHH:mm") : "")')">
                                            <i class="bi bi-pencil"></i> Modifica
                                        </button>
                                    </td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>
            Nessuna entry di lavoro trovata per @(new DateTime(monthFilter / 100, monthFilter % 100, 1).ToString("MMMM yyyy")).
        </div>
    }
</div>

<!-- Modal per modificare work entry -->
<div class="modal fade" id="editWorkEntryModal" tabindex="-1" aria-labelledby="editWorkEntryModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editWorkEntryModalLabel">Modifica Work Entry</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="editWorkEntryForm" method="post" asp-action="EditWorkEntry">
                <div class="modal-body">
                    <input type="hidden" id="workEntryId" name="workEntryId" />
                    <input type="hidden" id="employeeId" name="employeeId" />
                    <input type="hidden" id="month" name="month" value="@(Context.Request.Query["month"].FirstOrDefault())" />
                    <input type="hidden" id="proposalId" />
                    
                    <!-- Proposal alert -->
                    <div id="proposalAlert" class="alert alert-warning d-none">
                        <h6><i class="bi bi-exclamation-triangle me-2"></i>Proposta di modifica in attesa</h6>
                        <p class="mb-2">Un dipendente ha proposto le seguenti modifiche:</p>
                        <ul class="mb-2">
                            <li><strong>Ora inizio proposta:</strong> <span id="proposedStartTimeDisplay"></span></li>
                            <li><strong>Ora fine proposta:</strong> <span id="proposedEndTimeDisplay"></span></li>
                        </ul>
                        <p class="mb-0">Puoi accettare la proposta, rifiutarla, o modificare manualmente i valori.</p>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="text-muted mb-3">Valori attuali</h6>
                            <div class="mb-3">
                                <label class="form-label">Ora inizio attuale</label>
                                <input type="text" class="form-control" id="currentStartTime" readonly style="background-color: #e9ecef;" />
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Ora fine attuale</label>
                                <input type="text" class="form-control" id="currentEndTime" readonly style="background-color: #e9ecef;" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted mb-3">Nuovi valori</h6>
                            <div class="mb-3">
                                <label for="startTime" class="form-label">Ora inizio</label>
                                <input type="datetime-local" class="form-control" id="startTime" name="startTime" required />
                            </div>
                            
                            <div class="mb-3">
                                <label for="endTime" class="form-label">Ora fine (opzionale)</label>
                                <input type="datetime-local" class="form-control" id="endTime" name="endTime" />
                                <div class="form-check mt-2">
                                    <input class="form-check-input" type="checkbox" id="clearEndTime" />
                                    <label class="form-check-label" for="clearEndTime">
                                        Rimuovi ora fine
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annulla</button>
                    <div id="proposalButtons" class="d-none">
                        <form method="post" asp-action="AcceptProposal" style="display: inline;">
                            <input type="hidden" id="acceptProposalId" name="proposalId" />
                            <input type="hidden" id="acceptEmployeeId" name="employeeId" />
                            <input type="hidden" id="acceptMonth" name="month" value="@(Context.Request.Query["month"].FirstOrDefault())" />
                            <button type="submit" class="btn btn-success me-2">
                                <i class="bi bi-check-circle"></i> Accetta proposta
                            </button>
                        </form>
                        <form method="post" asp-action="RejectProposal" style="display: inline;">
                            <input type="hidden" id="rejectProposalId" name="proposalId" />
                            <input type="hidden" id="rejectEmployeeId" name="employeeId" />
                            <input type="hidden" id="rejectMonth" name="month" value="@(Context.Request.Query["month"].FirstOrDefault())" />
                            <button type="submit" class="btn btn-danger me-2">
                                <i class="bi bi-x-circle"></i> Rifiuta proposta
                            </button>
                        </form>
                    </div>
                    <button type="submit" class="btn btn-primary">Salva modifiche</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const hourlyRateInput = document.getElementById('hourlyRate');
            const monthlyPayElement = document.getElementById('monthlyPay');
            const monthlyHours = @selectedMonthHours;

            function calculatePay() {
                const hourlyRate = parseFloat(hourlyRateInput.value) || 0;
                const monthlyPay = hourlyRate * monthlyHours;
                monthlyPayElement.textContent = '€' + monthlyPay.toFixed(2);
            }
            hourlyRateInput.addEventListener('input', calculatePay);
            calculatePay();

            const prevMonthBtn = document.getElementById('prevMonth');
            const nextMonthBtn = document.getElementById('nextMonth');
            const monthDropdownItems = document.querySelectorAll('#monthDropdown .dropdown-item');

            function navigateMonth(direction) {
                const urlParams = new URLSearchParams(window.location.search);
                const currentMonth = parseInt(urlParams.get('month') || '@(DateTime.Now.Year * 100 + DateTime.Now.Month)');

                let newYear = Math.floor(currentMonth / 100);
                let newMonth = currentMonth % 100;

                if (direction === 'prev') {
                    newMonth--;
                    if (newMonth < 1) {
                        newMonth = 12;
                        newYear--;
                    }
                } else {
                    newMonth++;
                    if (newMonth > 12) {
                        newMonth = 1;
                        newYear++;
                    }
                }

                const newMonthValue = newYear * 100 + newMonth;
                urlParams.set('month', newMonthValue);
                window.location.search = urlParams.toString();
            }

            prevMonthBtn.addEventListener('click', () => navigateMonth('prev'));
            nextMonthBtn.addEventListener('click', () => navigateMonth('next'));

            monthDropdownItems.forEach(item => {
                item.addEventListener('click', function(e) {
                    e.preventDefault();
                    const monthValue = this.getAttribute('data-month');
                    const urlParams = new URLSearchParams(window.location.search);
                    urlParams.set('month', monthValue);
                    window.location.search = urlParams.toString();
                });
            });

            // Handle clear end time checkbox
            const clearEndTimeCheckbox = document.getElementById('clearEndTime');
            const endTimeInput = document.getElementById('endTime');
            
            if (clearEndTimeCheckbox && endTimeInput) {
                clearEndTimeCheckbox.addEventListener('change', function() {
                    if (this.checked) {
                        endTimeInput.disabled = true;
                        endTimeInput.value = '';
                    } else {
                        endTimeInput.disabled = false;
                    }
                });
            }

            // Handle form submission - ensure empty endTime is sent as empty string (will be bound as null)
            const editWorkEntryForm = document.getElementById('editWorkEntryForm');
            if (editWorkEntryForm) {
                editWorkEntryForm.addEventListener('submit', function(e) {
                    // If endTime is disabled or empty, ensure it's sent as empty string
                    if (endTimeInput.disabled || !endTimeInput.value) {
                        endTimeInput.value = '';
                    }
                });
            }
        });

        function openEditModal(workEntryId, startTime, endTime, employeeId, hasProposal, proposalId, proposedStartTime, proposedEndTime) {
            document.getElementById('workEntryId').value = workEntryId;
            document.getElementById('employeeId').value = employeeId;
            
            // Set current values (read-only)
            document.getElementById('currentStartTime').value = new Date(startTime).toLocaleString('it-IT');
            document.getElementById('currentEndTime').value = endTime && endTime.trim() !== '' 
                ? new Date(endTime).toLocaleString('it-IT') 
                : '-';
            
            const hasProposalBool = hasProposal === 'true';
            const proposalAlert = document.getElementById('proposalAlert');
            const proposalButtons = document.getElementById('proposalButtons');
            
            if (hasProposalBool && proposalId) {
                // Show proposal alert
                proposalAlert.classList.remove('d-none');
                document.getElementById('proposedStartTimeDisplay').textContent = proposedStartTime 
                    ? new Date(proposedStartTime).toLocaleString('it-IT')
                    : '-';
                document.getElementById('proposedEndTimeDisplay').textContent = proposedEndTime && proposedEndTime.trim() !== ''
                    ? new Date(proposedEndTime).toLocaleString('it-IT')
                    : '-';
                
                // Show proposal buttons
                proposalButtons.classList.remove('d-none');
                document.getElementById('acceptProposalId').value = proposalId;
                document.getElementById('acceptEmployeeId').value = employeeId;
                document.getElementById('rejectProposalId').value = proposalId;
                document.getElementById('rejectEmployeeId').value = employeeId;
                
                // Pre-fill with proposed values
                document.getElementById('startTime').value = proposedStartTime || startTime;
                const endTimeInput = document.getElementById('endTime');
                const clearEndTimeCheckbox = document.getElementById('clearEndTime');
                
                if (proposedEndTime && proposedEndTime.trim() !== '') {
                    endTimeInput.value = proposedEndTime;
                    endTimeInput.disabled = false;
                    clearEndTimeCheckbox.checked = false;
                } else if (endTime && endTime.trim() !== '') {
                    endTimeInput.value = endTime;
                    endTimeInput.disabled = false;
                    clearEndTimeCheckbox.checked = false;
                } else {
                    endTimeInput.value = '';
                    endTimeInput.disabled = true;
                    clearEndTimeCheckbox.checked = true;
                }
            } else {
                // Hide proposal alert and buttons
                proposalAlert.classList.add('d-none');
                proposalButtons.classList.add('d-none');
                
                // Set current values as editable
                document.getElementById('startTime').value = startTime;
                const endTimeInput = document.getElementById('endTime');
                const clearEndTimeCheckbox = document.getElementById('clearEndTime');
                
                if (endTime && endTime.trim() !== '') {
                    endTimeInput.value = endTime;
                    endTimeInput.disabled = false;
                    clearEndTimeCheckbox.checked = false;
                } else {
                    endTimeInput.value = '';
                    endTimeInput.disabled = true;
                    clearEndTimeCheckbox.checked = true;
                }
            }
            
            const modal = new bootstrap.Modal(document.getElementById('editWorkEntryModal'));
            modal.show();
        }
    </script>
}
