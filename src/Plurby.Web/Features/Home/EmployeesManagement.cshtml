@model Plurby.Services.Shared.UsersIndexDTO
@{
    ViewData["Title"] = "Gestione Dipendenti";
}

<div class="container mt-4">


        <!-- Breadcrumb UX-friendly -->
        <nav aria-label="breadcrumb" class="mb-3">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="@Url.Action("Index", "Home")" class="text-decoration-none" style="color:#2A4494;">
                        <i class="bi bi-house-door-fill me-1"></i> Dashboard
                    </a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">
                    Gestione Dipendenti
                </li>
            </ol>
        </nav>
    
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">Gestione Dipendenti</h1>
    </div>

    <!-- Table -->
    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Nome</th>
                    <th>Email</th>
                    <th>Stato</th>
                    <th class="text-end">Azioni</th>
                </tr>
            </thead>
            <tbody id="userTableBody">
                @foreach (var user in Model.Users)
                {
                    <tr class="userRow">
                        <td>@user.FirstName @user.LastName</td>
                        <td>@user.Email</td>
                        <td>
                            @if (user.IsWorking)
                            {
                                <span class="badge bg-success-subtle text-success">
                                    Lavorando
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-secondary-subtle text-secondary">
                                    Non lavorando
                                </span>
                            }
                        </td>
                        <td class="text-end">
                            <a asp-action="EmployeeDetail"
                               asp-route-id="@user.Id"
                               class="btn btn-outline-secondary btn-sm">
                                <i class="fas fa-clock-rotate-left me-1"></i>
                                Storico
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Pagination -->
    <div class="d-flex justify-content-between align-items-center mt-4">
        <div id="pageCounter" class="text-muted small"></div>

        <div class="btn-group">
            <button id="prevBtn" class="btn btn-outline-secondary btn-sm">
                <i class="fas fa-chevron-left me-1"></i>
                Indietro
            </button>

            <button id="nextBtn" class="btn btn-outline-secondary btn-sm">
                Avanti
                <i class="fas fa-chevron-right ms-1"></i>
            </button>
        </div>
    </div>
</div>

<!-- FontAwesome -->
<link rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<script>
    const rows = document.querySelectorAll('.userRow');
    const rowsPerPage = 5;
    let currentPage = 1;
    const totalPages = Math.ceil(rows.length / rowsPerPage);

    const pageCounter = document.getElementById('pageCounter');
    const prevBtn = document.getElementById('prevBtn');
    const nextBtn = document.getElementById('nextBtn');

    function showPage(page) {
        const start = (page - 1) * rowsPerPage;
        const end = start + rowsPerPage;

        rows.forEach((row, index) => {
            row.style.display = index >= start && index < end ? '' : 'none';
        });

        prevBtn.disabled = page === 1;
        nextBtn.disabled = page === totalPages;

        pageCounter.textContent = `Pagina ${page} di ${totalPages}`;
    }

    prevBtn.addEventListener('click', () => {
        if (currentPage > 1) {
            currentPage--;
            showPage(currentPage);
        }
    });

    nextBtn.addEventListener('click', () => {
        if (currentPage < totalPages) {
            currentPage++;
            showPage(currentPage);
        }
    });

    showPage(currentPage);
</script>
